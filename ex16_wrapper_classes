package helloWorld;


public class Main {

	public static void main(String[] args) {
		
		// wrapper class - provides a way to use primitive data types as reference data types
		// reference data types contain useful methods
		// can be used with collections (ex: array lists)
	
//		primitives	wrapper (these take up more resource to use than compared to primitives)
//		________	_______
//
//		boolean		Boolean
//		char		Character
//		int			Integer
//		double		Double
		
//		autoboxing - java compiler auto converts primitive to wrapper class
//		unboxing - vice versa
		
		
		Boolean a = true;
		char b = '#';
		Integer c = 12;
		Double d = 3.14;
		String e = "ada";
		
		// use auto_complete to see diff options available
		
		if(a==true) { // unboxing takes place here automatically
			System.out.println("its true");
		}
	}
} 
